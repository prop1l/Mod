<Window x:Class="Mod.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Zoo Ticket App" Height="600" Width="1000"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">


    <Window.Resources>
        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <!-- Панель с кнопками -->
        <DockPanel LastChildFill="True">
            <StackPanel Orientation="Vertical" 
                        Background="#0078D7">
                
                
                
                <Button Content="Билеты"
                        Tag="TicketsPage"
                        Click="EntityButton_Click"
                        Background="#0078D7"
                        Foreground="White"
                        BorderThickness="0" FontSize="24"
                        Padding="10,5" Width="110"/>

                <Button Content="Корзина"
                        Tag="CartPage"
                        FontSize="24"
                        Click="EntityButton_Click"
                        Background="#0078D7"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10,5" Width="133"/>

                <Button Content="Админка"
                        Tag="AdminPanelPage"
                        Click="EntityButton_Click"
                        Background="#0078D7"
                        Foreground="White"
                        BorderThickness="0" FontSize="24"
                        Padding="10,5"/>
            </StackPanel>

            <!-- Основной контент -->
            <Border Margin="10"
                    Background="White"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    CornerRadius="8">
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden"
                       JournalOwnership="OwnsJournal"
                       Margin="0"/>
            </Border>
        </DockPanel>
    </Grid>
</Window>