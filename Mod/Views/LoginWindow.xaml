<Window x:Class="Mod.Views.LoginWindow"
        xmlns:helpers="clr-namespace:Mod.Helpers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Вход в систему" Height="450" Width="500"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Центральная панель с формой -->
        <Border Background="White"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="350">

            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Вход в систему"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Логин -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4">
                    <TextBox Text="{Binding Username}" 
                             Height="30"
                             Padding="5"
                             Background="Transparent"
                             BorderThickness="0"/>
                </Border>

                <!-- Пароль -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4">
                    <PasswordBox x:Name="PasswordBox"
                                 helpers:PasswordHelper.Attach="True"
                                 helpers:PasswordHelper.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                </Border>

                <!-- Кнопка входа -->
                <Button Content="Войти"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding Path=Password, ElementName=PasswordBox}"
                        Height="35"
                        Background="#0078D7"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        VerticalAlignment="Bottom"
                        Margin="0,10,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Content="{TemplateBinding Content}"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>